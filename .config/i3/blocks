#instance=eth0
#interval=5

# Battery indicator
#
# The battery instance defaults to 0.
[battery]
#label=BAT
#label=⚡
label=
#instance=1
interval=30

# Date Time
#
[time]
label=
command=date '+%I:%M %p '
interval=5

